
{% block body %}
	<div>
		<div> <h3 class="pad-h3">Message(s) contact(s) à traiter : </h3>
		
				<table class="table table-striped table-hover ">
					<thead>
						<tr>
							<th>id</th>
							<th>nom</th>
							<th>mail</th>
							<th>message</th>
							<th>user</th>
							<th>traité</th>

						</tr>
					</thead>
					<tbody>
						{% if contacts %}
							{% for contact in contacts %}
							<tr>
								{# {{dump(user.roles)}} #}
								<td>{{contact.id}}</td>
								<td>{{contact.name}}</td>
								<td>{{contact.mail}}</td>
								<td>{{contact.message}}</td>
								<td>{{contact.user}}</td>
								<td> <a href="#" id="check-article" data-href="{{ path('ht_admin_admin') }}" data-id="{{contact.id}}">Marquer le message comme traité</a> </td>
							</tr>

							{% endfor %}
						{% else %}
							Il n'y a aucun message contact à traiter pour le moment
						{% endif %}
					</tbody>
				</table>
			
		</div>
		<div>
			<h3 class="pad-h3">Nouveau(x) vendeur(s) à vérifier : </h3>
			<table class="table table-striped table-hover ">
				<thead>
					<tr>
						<th>id</th>
						<th>nom</th>
						<th>mail</th>
						<th>siret</th>							
						<th>traité</th>

					</tr>
				</thead>
				<tbody>
					{% for user in users %}
					<tr>
						{# {{dump(user.roles)}} #}
						<td>{{user.id}}</td>
						<td>{{user.username}}</td>
						<td>{{user.mail}}</td>
						<td>{{user.siret}}</td>
						<td>{{user.isChecked}}<a href="" class="check-button" data-href="{{ path('ht_admin_admin') }}" data-id="{{user.id}}">Autoriser</a></td>
					</tr>

					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}