{% extends "HTMainBundle::layout.html.twig" %}



{% block body %}
	<style >
		body {

			background: lightgray; 	
		}
	</style>
	     {# <h2>  Zone Admin  </h2> #}

	     <div class="container-fluid">
	     	{% if error %}
	     	<div class="alert go-hidden alert-warning">
	     		{{error.empty}} 
	     		
	     	</div>
	     	{% endif %}
	     	{% if error.picture is defined %}
	     	<div class="alert go-hidden alert-warning">
	     		{{error.picture}} 
	     		
	     	</div>
	     	{% endif %}
	     	{% if success %}
	     	<div class="alert go-hidden alert-success">
	     		{{ success }}
	     		
	     	</div>
	     	{% endif %}
	     	<div class="row header-admin">
		     	<div class="col">
		     		<div >
		     			<a class="action-button" href="#user" data-href="{{path('ht_admin_user')}}">
		     				<h3>Utilisateurs</h3>
		     			</a>
		     		</div>
		     		

		     	</div>
		     	<div class="col ">
		 			<div>
		 				<a class="action-button" href="#admin" data-href="{{path('ht_admin_admin')}}">
		 					<h3>Administration</h3>
		 				</a>
		 			</div>  
		 			<div id="admin">
		 			</div>  		
		     	</div>
		     	<div class="col ">
		     		<div>
		     			<a class="action-button" href="#content" data-href="{{path('ht_admin_content')}}">
		     				<h3>Contenu</h3>
		     			</a>
		     		</div>
		     		<div class="content">
		     		</div>
		     	</div>
	     	</div>
	     	<div id="mainDiv" class="container">
	     		<div class="row admin-div-main">
		     		<div class="col home-admin">
		     			<p class="p-admin">nombre d'utilisateurs : {{ users  | length }}</p>


		     		</div>
		     		<div class="col home-admin">
		     			<h2 class="p-admin">ESPACE ADMIN</h2>
		     		</div>
		     		<div class="col home-admin">
		     			<p class="p-admin">nombre de shop : {{ shops | length }}</p>
		     		</div>
		     	</div>

	     	</div>
	     </div>




	     
{% endblock %}