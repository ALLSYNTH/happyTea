{% extends "HTMainBundle::layout.html.twig" %}



{% block body %}
	     {# <h2>  Zone Admin  </h2> #}
	     <style type="">
	     	body {

	     		background-color: lightgray; 
	     	}
	     </style>
	
	     <div class="container-fluid">
	     	<div class="row header-admin">


	     	
		     	<div class="col">
		     		<div >
		     			<a class="action-button" href="#" data-href="{{path('ht_admin_user')}}">
		     				<h3>Utilisateurs</h3>
		     			</a>
		     		</div>
		     		

		     	</div>
		     	<div class="col ">
		 			<div>
		 				<a class="action-button" href="#" data-href="{{path('ht_admin_admin')}}">
		 					<h3>Administration</h3>
		 				</a>
		 			</div>  
		 			<div id="admin">
		 			</div>  		
		     	</div>
		     	<div class="col ">
		     		<div>
		     			<a class="action-button" href="#" data-href="{{path('ht_admin_content')}}">
		     				<h3>Contenu</h3>
		     			</a>
		     		</div>
		     		<div class="content">
		     		</div>
		     	</div>
	     	</div>
	     	<div id="mainDiv" class="container">
	     		{% if success %}
	     			<div class="alert alert-success fadeOutTimer"> {{success}} </div>

	     		
	     		{% endif %}
	     		{% if error.empty is defined %}
	     			<div class="alert alert-warning fadeOutTimer"> {{error.empty}} </div>

	     		
	     		{% endif %}
	     		{% if error.picture is defined %}
	     			<div class="alert alert-warning fadeOutTimer"> {{error.picture}} </div>

	     		
	     		{% endif %}
	     		<div class="row admin-div-main">
		     		<div class="col home-admin">
		     			<p class="p-admin">nombre d'utilisateurs : {{ users  | length }}</p>

		     			
		     		</div>
		     		<div class="col home-admin">
		     			<h2 class="p-admin">ESPACE ADMIN</h2>
		     		</div>
		     		<div class="col home-admin">
		     			<p class="p-admin">nombre de shop : {{ shops | length }}</p>
		     		</div>
		     	</div>

	     	</div>
	     </div>




	     
{% endblock %}