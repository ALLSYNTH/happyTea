<!DOCTYPE html>

<html>
	<head>
		<title>{{title}}</title>

		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="{{ asset('css/main.css')}}">
	</head>
	<body>
		<header>
			<!-- bootstrap navbar -->
			<nav class="navbar navbar-toggleable-md navbar-light bg-faded">
			  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
			    <span class="navbar-toggler-icon"></span>
			  </button>
			  <div class="container">
					<!-- branding logo -->
				  <a class="navbar-brand d-flex align-items-center" href="{{ path('ht_main_homepage')}}">
				  	<img src="{{ asset('img/logo.png') }}" class="mainlogo">
				  </a>

				  <div class="collapse navbar-collapse d-flex justify-content-around" id="navbarNavDropdown">

						<!-- nav menu : home - equipe - contact -->
						<ul class="navbar-nav">

							<li class="nav-item  {%if app.request.attributes.get('_route') == 'ht_main_homepage' %} active {% endif %}">
								<a class="nav-link" href="{{ path('ht_main_homepage')}}">Home</a>
							</li>

				      <li class="nav-item {%if app.request.attributes.get('_route') == 'ht_main_team' %} active {% endif %}">
				        <a class="nav-link" href="{{ path('ht_main_team')}}">Equipe </a>
				      </li>
				      <li class="nav-item  {%if app.request.attributes.get('_route') == 'ht_main_contact' %} active {% endif %}">
				        <a class="nav-link" href="{{ path('ht_main_contact')}}">Contact</a>
				      </li>

							<!-- nav menu activation for seller and user -->
				      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
				      <li class="nav-item">
				        <a class="nav-link" href="{{path('ht_main_user', {'id': app.user.id} )}}">Ma théière</a>
				      </li>
				     	 {% if is_granted('ROLE_SELLER') %}
					     	<li class="nav-item">
					        <a class="nav-link" href="{% if app.user.shop == null %} {{path('ht_main_addSeller')}} {% else %} {{path( 'ht_main_shop', { 'id' : app.user.shop.id } ) }} {% endif %}">Mon shop</a>
					      </li>
				  		{% endif %}
					  {% endif %}
					  {% if false == is_granted('IS_AUTHENTICATED_FULLY') %}
				    </ul>

						<ul class="navbar-nav">

						<!-- nav dropdown Inscription -->
						  <li class="nav-item dropdown {%if app.request.attributes.get('_route') == 'register' or  app.request.attributes.get('_route') == 'register_seller' %} active {% endif %}">
				        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				          Inscription
				        </a>
				        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
				          <a class="dropdown-item" href="{{ path('register') }}">Consommateur</a>
				          <a class="dropdown-item" href="{{ path('register_seller') }}">Vendeur</a>
				        </div>
				      </li>

							<!-- nav Login / Logout -->
				      <li class="nav-item {%if app.request.attributes.get('_route') == 'login' %} active {% endif %}">
				        <a class="nav-link" href="{{ path('login')}}">Login</a>
				      </li>
				      {% endif %}

				      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
				      <li class="nav-item">
				        <a class="nav-link" href="{{ path('logout')}}">Logout</a>
				     	{% endif %}
				      </li>


				    </ul>

				  </div>
				</div>
			</nav>
		</header>
		{# <h1 class="maintitle">Page {{pageName}} de {{title}}</h1> #}
		{% block body %}
		{% endblock %}


			<footer id="footer">
				<div class="container">
					<a class="navbar-brand simplelink" href="{{path ('ht_main_sitemap')}}" >sitemap</a>
					<span>

					</span>
				</div>
			</footer>



		<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
		<script type="text/javascript" src="{{ asset('js/main.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/isotope.pkgd.min.js') }}"></script>

		<script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.js"></script>
		<!-- or -->
		<script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js"></script>

	</body>
</html>
