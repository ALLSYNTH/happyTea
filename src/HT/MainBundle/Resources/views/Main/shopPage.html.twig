{% extends "HTMainBundle::layout.html.twig" %}
{% block body %}


<div class="container py-5">
  <div class="row m-2">
    <section class="shoppage d-flex flex-column">
      <h1>La boutique de {{ shop.name }}</h1>

      <!-- description shop -->
      <div class="row">
        <figure class="col-12 col-md-4">
          <!-- logo shop -->
          <img src="{{shop.logo}}" class="img-responsive" alt="">
        </figure>
        <div class="col-md-8">

        <p class="shoppage description">{{shop.description}}</p>
        <!-- infos contact shop -->
        <div class="row">
          <div class="col-6 col-md-4 d-flex justify-content-center align-items-center">
            <img class="pr-2" src="{{ asset('img/icons/phone.png') }}" alt="">
            <p class="minitext">{{shop.phone}}</p>
          </div>
          <div class="col-6 col-md-4 d-flex justify-content-center align-items-center my-3">
            <img class="pr-2" src="{{ asset('img/icons/link.png') }}" alt="">
            <a href="{{shop.url}}" class="minitext">{{shop.url}}</a>
          </div>
          <div class="col-6 col-md-4 d-flex justify-content-center align-items-center">
            <img class="pr-2" src="{{ asset('img/icons/location.png') }}" alt="">
            <p class="minitext">{{shop.adress}}</p>
          </div>
          <div class="col-6 col-md-4 d-flex justify-content-center align-items-center">

            <p class="minitext">ouvert en semaine de {{shop.openingTimes.opening}} - {{shop.openingTimes.closing}}</p>
          </div>

        </div>
      </div>

      </div>



    </section>
  </div>
</div>

<section class="container-fluid shoppage my-5">

  <h2>Les Thés de la Boutique {{shop.name}}</h2>

  <!-- les produits du shop -->
  <div class="row my-5">

    {% for shopProduct in shopProducts %}
    <div class="col-6 col-md-4">
      <h4 class="text-center py-2">{{ shopProduct.name }}</h4>
      <img src="https://www.graphicpear.com/wp-content/uploads/2017/10/6-1.jpg"  class="img-responsive card-img-top">
      <div class="p-2 d-flex justify-content-around">
        <p class="shoppage-badge">{{ shopProduct.category.name }} </p>
        <p class="">{{ shopProduct.price }} €</p>
      </div>
      <div class="d-flex justify-content-center">
        <a href="{{path('ht_main_teas', {'id': shopProduct.id} )}}">voir ce thé</a>
      </div>
    </div>

    {% endfor %}








  </div>

</section>

{{ dump(shop) }}
{{ dump() }}



{% endblock %}
